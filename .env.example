# Environment Configuration Example
# Copy this file to .env for local development
# DO NOT commit .env to version control

# ======================
# Application Settings
# ======================

# App Name
VITE_APP_NAME=JSON Viewer & Editor

# App Version (auto-populated from package.json)
VITE_APP_VERSION=1.0.0

# Environment (development, staging, production)
VITE_ENV=development

# ======================
# API Configuration
# ======================

# API Base URL (if you add backend API in future)
# VITE_API_URL=https://api.example.com
# VITE_API_TIMEOUT=30000

# ======================
# Analytics (Optional)
# ======================

# Google Analytics Tracking ID
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Google Tag Manager ID
# VITE_GTM_ID=GTM-XXXXXXX

# ======================
# Feature Flags
# ======================

# Enable/disable features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_DEBUG_MODE=false

# ======================
# External Services
# ======================

# Sentry for error tracking (optional)
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ======================
# Build Configuration
# ======================

# Base public path (for GitHub Pages deployment)
# VITE_BASE_URL=/
# For GitHub Pages: VITE_BASE_URL=/json-viewer/

# ======================
# Local Development
# ======================

# Development server port (default: 5173)
VITE_PORT=5173

# Open browser automatically
VITE_OPEN_BROWSER=true

# ======================
# Security
# ======================

# Enable CORS for development
VITE_ENABLE_CORS=true

# Allowed origins (comma-separated)
# VITE_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ======================
# Storage
# ======================

# LocalStorage key prefix
VITE_STORAGE_PREFIX=json-viewer-

# ======================
# UI Customization
# ======================

# Default theme (light/dark)
VITE_DEFAULT_THEME=light

# Enable theme switching
VITE_ENABLE_THEME_SWITCH=true

# ======================
# Performance
# ======================

# Max file size for JSON upload (in MB)
VITE_MAX_FILE_SIZE=10

# Enable service worker (PWA)
VITE_ENABLE_PWA=false

# ======================
# Notes
# ======================
# 1. Variables prefixed with VITE_ are exposed to the client
# 2. Never commit sensitive data (API keys, secrets) to version control
# 3. Use different .env files for different environments:
#    - .env.development
#    - .env.staging
#    - .env.production
