# ===============================
# Prevent access to hidden files
# ===============================
<FilesMatch "^\.">
  Order allow,deny
  Deny from all
</FilesMatch>

# ===============================
# Prevent access to backup files
# ===============================
<FilesMatch "\.(bak|config|dist|fla|inc|ini|log|psd|sh|sql|swp)$">
  Order allow,deny
  Deny from all
</FilesMatch>
